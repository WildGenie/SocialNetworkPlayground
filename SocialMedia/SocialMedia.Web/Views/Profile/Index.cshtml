@model SocialMedia.Services.Models.ProfileServiceModel

@{
    ViewData["Title"] = "Profile";
}

<style type="text/css">
    .container .posts {
        margin-bottom: 50px;
    }
</style>

<div class="container">
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3">
                <img src="~/img/profile_pic.png" class="rounded" alt="Cinque Terre" width="150" height="150">
            </div>
            <div class="col-md-7">
                <table class="table">
                    <tbody>
                        <tr></tr>
                        <tr>
                            <td><b>@Model.User.FullName</b></td>
                            <td><b>@Model.User.UserName</b></td>
                        </tr>
                        <tr></tr>
                        <tr>
                            <td>@Model.User.Country</td>
                            <td>@Model.User.DateOfBirth</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            @if (Model.Message == "1")
            {
                <div class="col-md-1">
                    <div class="dropdown">
                        <button class="btn btn-outline-primary" data-toggle="dropdown" role="menu" aria-expanded="false" style="cursor:pointer">
                            <img width="25" height="25" src="https://img.icons8.com/ultraviolet/40/000000/settings.png" />
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Unfriend", "Unfriend", "Friendships",
                                 new { friendId = Model.User.Id },
                                 new { @class = "nav-link btn btn-outline-primary" })
                            </li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<hr class="container" style="height: 1px; border-width: 0; color: skyblue; background-color: skyblue">

<div class="container">
    <!-- Model.Message represents the friendship status -->
    @if (Model.Message == null ||
   Model.Message == "1")
    {
        <ul class="nav" style="margin: 0, auto;">
            <li class="nav-item col-md-3">
                <button class="nav-link btn btn-outline-primary" href="#"><img src="https://img.icons8.com/ultraviolet/40/000000/about.png" />  About </button>
            </li>
            <li class="nav-item col-md-3">
                <button class="nav-link btn btn-outline-primary" href="#"><img src="https://img.icons8.com/ultraviolet/40/000000/small-icons.png" />  Gallery </button>
            </li>
            <li class="nav-item col-md-3">
                <button class="nav-link btn btn-outline-primary" href="#"><img src="https://img.icons8.com/ultraviolet/40/000000/handshake.png" />  Friends </button>
            </li>
            <li class="nav-item col-md-3">
                <button class="nav-link btn btn-outline-primary" href="#"><img src="https://img.icons8.com/ultraviolet/40/000000/groups.png" />  Groups </button>
            </li>
        </ul>
    }
    else if (Model.Message == "0 Request")
    {
        <ul class="nav" style="margin: 0, auto;">
            <li class="nav-item col-md-3"></li>
            <li class="nav-item col-md-3">
                @Html.ActionLink("Accept", "Accept", "Friendships",
                         new { requesterId = Model.User.Id },
                         new { @class = "btn btn-outline-success" })
            </li>
            <li class="nav-item col-md-3">
                @Html.ActionLink("Reject", "Reject", "Friendships",
                        new { requesterId = Model.User.Id },
                        new { @class = "btn btn-outline-danger" })
            </li>
            <li class="nav-item col-md-3"></li>
        </ul>
    }
    else if (Model.Message == "0 Pending")
    {
        <ul class="nav" style="margin: 0, auto;">
            <li class="nav-item col-md-3"></li>
            <li class="nav-item col-md-3">
                @Html.ActionLink("Cancel Invitation", "CancelInvitation", "Friendships",
                         new { addresseeId = Model.User.Id },
                         new { @class = "btn btn-primary" })
            </li>
            <li class="nav-item col-md-3"></li>
            <li class="nav-item col-md-3"></li>
        </ul>
    }
    else if (Model.Message == "-1")
    {
        <ul class="nav" style="margin: 0, auto;">
            <li class="nav-item col-md-3"></li>
            <li class="nav-item col-md-3">
                @Html.ActionLink(
                    "Add Friend", "SendRequest", "Friendships",
                    new { addresseeId = Model.User.Id },
                    new { @class = "btn btn-outline-primary", @style = "margin: 20px" })
            </li>
            <li class="nav-item col-md-3"></li>
            <li class="nav-item col-md-3"></li>
        </ul>
    }
</div>

<hr class="container" style="height:1px;border-width:0;color:skyblue;background-color:skyblue">
@if (Model.Message == null ||
Model.Message == "1")
{
    <div class="container posts">
        @if (Model.Message == null)
        {
            <!-- New Post Btn -->
            @Html.ActionLink(
                    "Add Post", "Create", "Posts",
                    new { invokedFrom = "profile page" },
                    new { @class = "col-md-12 btn btn-outline-primary", @style = "margin: 20px" })
        }

        <!-- Posts -->
        @if (Model.Posts.Count > 0)
        {
            foreach (var post in Model.Posts.OrderByDescending(d => d.DatePosted))
            {
                <div class="media border p-3" style="margin-bottom: 20px;">
                    <img src="img/profile_pic.png" class="mr-3 mt-3 rounded-circle" style="width:60px;">
                    <div class="media-body">
                        <!-- Post author and posted on-->
                        <div class="row">
                            <div class="col-md-10">
                                @if (post.Group != null)
                                {
                                    <h5>@Model.User.UserName <small><i>Posted in <b>@post.Group.Title</b> on @post.DatePosted</i></small></h5>

                                }
                                else
                                {
                                    <h5>@Model.User.UserName <small><i>Posted on @post.DatePosted</i></small></h5>
                                }
                            </div>
                            <!-- Dropdown settings -->
                            <div class="col-md-2 dropdown">
                                <button class="btn btn-outline-primary" data-toggle="dropdown" role="menu" aria-expanded="false" style="cursor:pointer">
                                    <img width="25" height="25" src="https://img.icons8.com/ultraviolet/40/000000/settings.png" />
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        @Html.ActionLink(
                         "Edit", "Edit", "Posts",
                         new { id = post.PostId, invokedFrom = "profile page" },
                         new { @class = "btn" })
                                    </li>
                                    <li>
                                        @Html.ActionLink(
                         "Delete", "Delete", "Posts",
                         new { id = post.PostId, invokedFrom = "profile page" },
                         new { @class = "btn" })
                                    </li>
                                </ul>
                            </div>
                        </div>
                        @if (post.TaggedFriends != null)
                        {
                            foreach (var user in post.TaggedFriends)
                            {
                                <a href="#" class="badge badge-primary">@user.UserName</a>
                            }
                        }


                        <p style="margin: 15px">
                            @post.Content
                        </p>

                        <hr style="height:1px;border-width:0;color:skyblue;background-color:skyblue">

                        <!-- New Comment Btn -->
                        @Html.ActionLink(
                         "Add Comment", "Create", "Comments",
                         new { id = post.PostId, invokedFrom = "profile page" },
                         new { @class = "btn btn-outline-primary" })

                        <hr style="height:1px;border-width:0;color:skyblue;background-color:skyblue">

                        <!-- Comments -->
                        @if (post.Comments != null)
                        {
                            foreach (var comment in post.Comments.OrderByDescending(d => d.Comment.DatePosted))
                            {
                                <div class="container mt-3">
                                    <div class="media border p-3">
                                        <img src="img/profile_pic.png" class="mr-3 mt-3 rounded-circle" style="width:60px;">
                                        <div class="media-body">
                                            <div class="row">
                                                <div class="col-md-10">
                                                    <!-- Author and posted date-->
                                                    <h6>@comment.Comment.Author.UserName <small><i>Posted on @comment.Comment.DatePosted</i></small></h6>

                                                    <!-- Tagged users -->
                                                    @if (comment.Tagged != null)
                                                    {
                                                        foreach (var user in comment.Tagged)
                                                        {
                                                            <a href="#" class="badge badge-primary">@user.UserName</a>
                                                        }
                                                    }
                                                </div>
                                                <div class="col-md-2">
                                                    @if (Model.User.Id == comment.Comment.AuthorId)
                                                    {
                                                        <button class="btn btn-outline-primary"><img width="15" height="15" src="https://img.icons8.com/ultraviolet/40/000000/settings.png" /></button>
                                                    }
                                                </div>
                                            </div>
                                            <!-- Content -->
                                            <p>@comment.Comment.Content</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>

            }
        }
    </div>
}