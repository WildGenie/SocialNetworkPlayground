@model SocialMedia.Web.Models.PostViewModel

@{
    ViewData["Title"] = "Edit post";
}

<h1>Edit Post</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Posts">
            <!--Post model-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.PostId" />
            @*@<input type="hidden" asp-for="@Model.AuthorId" />*@
            <div class="form-group">
                @*--Tagged users--*@
                @if (Model.TagFriends.TaggedFriends.Count > 0)
                {
                    <label>@Model.Author.UserName is with </label>
                    foreach (var user in Model.TagFriends.TaggedFriends)
                    {
                        <a href="#" class="badge badge-primary">@user.UserName </a>
                    }
                }
                else
                {
                    <label>@Model.Author.UserName</label>
                }
                <input asp-for="@Model.Content" class="form-control" />
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>

            <!--Tag friends-->
            <div class="col-md-6">
                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Tag</button>
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Friends</h4>
                            </div>
                            <div class="modal-body">
                                <ul>
                                    @if (Model.TagFriends.UntaggedFriends.Count == 0)
                                    {
                                        <li>
                                            @Model.Author.UserName, you do not have any more friends.
                                        </li>
                                    }
                                    else
                                    {
                                        @foreach (var user in Model.TagFriends.UntaggedFriends)
                                        {
                                            <li>
                                                @Html.ActionLink(
                                               user.UserName, 
                                               "TagFriend", 
                                               "TagFriends", 
                                               new { id = Model.PostId, taggedId = user.Id })
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if (Model.TagFriends.TaggedFriends.Count > 0)
            {
                <!--Remove tagged friend-->
                <div class="col-md-6">
                    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal2">Remove tags</button>
                    <div class="modal fade" id="myModal2" role="dialog">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">Remove tags</h4>
                                </div>
                                <div class="modal-body">
                                    <ul>
                                        @foreach (var user in Model.TagFriends.TaggedFriends)
                                        {
                                            <li>
                                                @Html.ActionLink(
                                               user.UserName, 
                                               "RemoveTaggedFriend", 
                                               "TagFriends", 
                                               new { taggedId = user.Id, id = Model.PostId })
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
