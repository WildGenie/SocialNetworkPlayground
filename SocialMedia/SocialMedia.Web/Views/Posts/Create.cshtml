@model SocialMedia.Web.Models.PostViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Post</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Posts">
            <!--Post model-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*--Tagged users--*@
                @if (Model.TagFriends.TaggedFriends.Count > 0)
                {
                    <label>@Model.CurrentUser.UserName is with </label>
                    foreach (var user in Model.TagFriends.TaggedFriends)
                    {

                        <a href="#" class="badge badge-primary">@user.UserName </a>
                    }
                }
                else
                {
                    <label>@Model.CurrentUser.UserName</label>
                }
                <input asp-for="@Model.Content" class="form-control" />
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>

            <!--Tag friends-->
            <div>
                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Tag Friends</button>
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Friends</h4>
                            </div>
                            <div class="modal-body">
                                <ul>
                                    @if (Model.TagFriends.UntaggedFriends.Count == 0)
                                    {
                                        <li>
                                            @Model.CurrentUser.UserName, you do not have any more friends.
                                        </li>
                                    }
                                    else
                                    {
                                        @foreach (var user in Model.TagFriends.UntaggedFriends)
                                        {
                                            <li>
                                                @Html.ActionLink(
                                               user.UserName, 
                                               "AddTaggedFriendLocal", 
                                               "TagFriends", 
                                               new { taggedId = user.Id })
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
